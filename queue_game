        }

        h1{
            color: #333;
        }

        #queue-container{
            width: 500px;
            margin: 20px auto;
            border: 2px solid #333;
            min-height: 100px;
            display: flex;
            justify-content: flex-start; /* Front left, Rear right */
            align-items: center;
            padding: 10px;
            background-color: white;
            flex-wrap: wrap;
        }

        .queue-element{
            background-color: #2196F3;
            color: white;
            padding: 10px 15px;
            margin: 5px;
            border-radius: 5px;
            font-weight: bold;
        }

        button{
            padding: 10px 20px;
            margin: 10px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            border: none;
            background-color: #333;
            color: white;
        }

        button:hover{
            background-color: #555;
        }

        #status{
            margin-top: 20px;
            font-size: 16px;
            color: #333;
            font-weight: bold;
        }

        input[type="text"]{
            padding: 8px;
